api:
  listen: ":1984"
  origin: "*"

rtsp:
  listen: ":8554"

streams:
  # Camera 1: FFmpeg with TCP transport (H264 native, copy codec)
  camera1: "ffmpeg:${CAMERA_1_URL}#input=rtsp_transport:tcp#video=copy"
  camera2: "ffmpeg:${CAMERA_2_URL}#video=h264"
  camera3: "ffmpeg:${CAMERA_3_URL}#video=h264"
  camera4: "ffmpeg:${CAMERA_4_URL}#video=h264"
